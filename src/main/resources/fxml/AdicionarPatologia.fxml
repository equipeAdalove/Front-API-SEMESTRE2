<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@../css/application.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/" fx:controller="com.adalove.api.controller.AdicionarPatologiaController">
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Adicionar Patologia" />



    <Label text="Código CID:" />
    <TextField fx:id="cidField" promptText="Digite o código CID" />

    <Label text="Grau:" />
    <TextField fx:id="grauField" promptText="Digite o grau da patologia" />

    <Label text="Nome:" />
    <TextField fx:id="nomeField" promptText="Digite o nome da patologia" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onCancelClick" text="Cancelar" styleClass="remove-button" />
        <Button onAction="#onAddPatologiaClick" text="Adicionar" styleClass="save-button"/>

    </HBox>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
