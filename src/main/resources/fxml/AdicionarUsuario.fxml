<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@../css/application.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/" fx:controller="com.adalove.api.controller.AdicionarUsuarioController">
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Adicionar Usuário" />

    <Label text="Nome de Usuário:" />
    <TextField fx:id="usernameField" promptText="Digite o nome de usuário" />

    <Label text="Senha:" />
    <PasswordField fx:id="passwordField" promptText="Digite a senha" />

    <CheckBox fx:id="adminCheckBox" text="Administrador" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onCancelClick" text="Cancelar" styleClass="remove-button" />
        <Button onAction="#onAddUsuarioClick" text="Adicionar" styleClass="save-button"/>
    </HBox>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
