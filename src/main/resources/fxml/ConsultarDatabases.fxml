<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="569.0" stylesheets="@../css/application.css" prefWidth="442.0" spacing="10" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adalove.api.controller.ConsultarDatabasesController">
    <children>
        <Label text="Selecionar Entidade:" />
        <ComboBox fx:id="entityComboBox" onAction="#onEntitySelected">
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ComboBox>

        <TextField fx:id="searchField" promptText="Digite para pesquisar..." />
        <Button onAction="#onSearchClick" text="Pesquisar" />

        <TableView fx:id="recordsTableView" prefHeight="327.0" prefWidth="402.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Identificador" />
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nome" />
                <TableColumn fx:id="actionsColumn" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Ações" />
            </columns>
        </TableView>
      <Button fx:id="adicionarRegistro" onAction="#onAddRecordClick" mnemonicParsing="false" text="Adicionar " />
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
